<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.upc.dao.UserDao">

    <resultMap type="com.upc.model.User" id="UserMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="UserRoleMap" type="com.upc.model.User" extends="UserMap">
        <collection property="roles"
                    select="com.upc.dao.RoleDao.queryRolesByUserId"
                    column="{userId=id}"
                    fetchType="eager"/>
    </resultMap>
    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, user_name, password
        from springmvc.user
        where id = #{id}
    </select>

    <!--关联查询用户和角色-->
    <select id="queryUserAndRoleById" resultMap="UserRoleMap">
        select
               u.id, u.user_name, u.password
        from springmvc.user u
        where u.id = #{id}
    </select>

    <select id="findByUserName" resultMap="UserRoleMap">
        select
               u.id, u.user_name, u.password
        from springmvc.user u
        where u.user_name = #{userName}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, user_name, password
        from springmvc.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, user_name, password
        from springmvc.user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into springmvc.user(user_name, password)
        values (#{userName}, #{password})
    </insert>

    <insert id="insertUsers" parameterType="java.util.List" keyProperty="id" useGeneratedKeys="true">
        insert into springmvc.user(user_name, password)
        values
        <foreach collection="list" item="user" separator=",">
            (#{user.userName}, #{user.password})
        </foreach>
    </insert>

    <insert id="insertUserRoles" >
        INSERT INTO springmvc.user_role(user_id, role_id)
        VALUES 
               <foreach collection="list" item="user" separator=",">
                   <foreach collection="user.roles" separator="," item="role" >
                       (#{user.id},#{role.id})
                   </foreach>
               </foreach>
    </insert>
    <!--通过主键修改数据-->
    <update id="update">
        update springmvc.user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from springmvc.user where id = #{id}
    </delete>

</mapper>